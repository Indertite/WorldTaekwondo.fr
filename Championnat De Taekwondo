<body>
  <div class="confetti" aria-hidden="true"></div>

  <div class="card" role="main">
    <div class="badge" id="badgeText">CHAMPIONNE DÉPARTEMENTALE</div>
    <h1 id="mainText">Zahia</h1>
    <p class="lead" id="sub">a été élue champion·ne départemental·e — félicitations !</p>

    <div class="controls" aria-hidden="false">
      <input id="nameInput" type="text" placeholder="Écris un prénom..." />
      <button class="btn" id="setBtn">Mettre à jour</button>
      <button class="btn" id="resetBtn">Remettre par défaut</button>
    </div>

    <div class="small">Astuce : tu peux partager la page avec <code>?name=Prénom</code> à la fin de l'URL.</div>
    <footer>Prank bon enfant — ne pas diffuser si ça pourrait blesser quelqu’un.</footer>
  </div>

  <script>
    // Remplit depuis paramètre URL ?name=...
    function getParam(n){const u=new URL(location.href);return u.searchParams.get(n)}
    function setName(n){
      const name = n || "Zahia";
      document.getElementById('mainText').textContent = name;
      document.title = name + " — Champion·ne départemental·e";
    }

    const param = getParam('name');
    if(param) setName(param);

    document.getElementById('setBtn').addEventListener('click', ()=>{
      const v = document.getElementById('nameInput').value.trim();
      if(v) {
        setName(v);
        // change URL without reload
        const u = new URL(location.href);
        u.searchParams.set('name', v);
        history.replaceState({}, '', u.toString());
      }
    });
    document.getElementById('resetBtn').addEventListener('click', ()=>{
      history.replaceState({}, '', location.pathname);
      setName('Zahia');
      document.getElementById('nameInput').value = '';
    });

    // simple confetti generator
    const confetti = document.querySelector('.confetti');
    const colors = ['#ffd700','#ff6b6b','#6bffb3','#6bc1ff','#d66bff'];
    for(let i=0;i<40;i++){
      const el = document.createElement('i');
      el.style.left = (Math.random()*100)+'%';
      el.style.top = (-Math.random()*20-5)+'vh';
      el.style.width = (6+Math.random()*8)+'px';
      el.style.height = (10+Math.random()*12)+'px';
      el.style.background = colors[Math.floor(Math.random()*colors.length)];
      el.style.animationDuration = (3+Math.random()*5)+'s';
      el.style.opacity = 0.9;
      confetti.appendChild(el);
    }
  </script>
</body>
