    .card{width:min(920px,94vw);padding:48px;border-radius:20px;background:linear-gradient(180deg,rgba(255,255,255,0.03),rgba(255,255,255,0.01));box-shadow:0 8px 30px rgba(2,6,23,0.6);text-align:center}
    h1{font-size:clamp(28px,6vw,64px);margin:0 0 12px;letter-spacing:1px}
    p.lead{margin:0 0 20px;font-size:18px;color:rgba(255,255,255,0.85)}
    .badge{display:inline-block;padding:10px 18px;border-radius:999px;font-weight:700;background:linear-gradient(90deg,var(--accent),#ffb84d);color:#071029}
